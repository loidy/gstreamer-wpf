<Window x:Class="GstreamerWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GstreamerWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="streamImageComponent" HorizontalAlignment="Left" Height="204" Margin="215,29,0,0" VerticalAlignment="Top" Width="365" Source="{Binding StreamImage, Mode=OneWay}"/>
        <Button x:Name="button" HorizontalAlignment="Center" Margin="0,374,0,0" VerticalAlignment="Top" Click="button_Click" Content="{Binding Content}" Height="25" Width="109"/>
    </Grid>
</Window>
